<%= form_with(model: author, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block font-semibold mb-1" %>
    <%= form.text_field :name, class: "w-full border border-gray-300 rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :bio, class: "block font-semibold mb-1" %>
    <%= form.text_area :bio, class: "w-full border border-gray-300 rounded p-2" %>
  </div>

  <div class="mt-6 flex justify-between">
    <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <%= link_to 'Back', authors_path, class: "bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700" %>
  </div>
<% end %>
